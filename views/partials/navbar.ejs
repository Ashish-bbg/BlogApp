<div class="container mt-4">
  <% if (locals.error) { %>
    <div class="alert alert-danger" role="alert">
      <span><%= error %></span>
    </div>
  <% } %>

  <div class="container mt-4">
  <% if (locals.msg) { %>
    <div class="alert alert-info" role="alert">
      <span><%= msg %></span>
    </div>
  <% } %>


</div>

<script>
  const className = document.querySelector(".alert")
  if(className) 
  setTimeout(() => {
    className.remove()
  }, 1500);

</script>
