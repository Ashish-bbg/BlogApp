<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home</title>
</head>

<body>
    <%- include("./partials/navbar") %>

        <div class="container mt-4">
            <div class="row g-4">
                <% blogs.forEach(blog=> { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= blog?.coverImage || "./images/default.png"  %>" class="card-img-top" alt="Cover Image"
                                style="height: 180px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate">
                                    <%= blog.title %>
                                </h5>
                                <%  const preview = blog.body.split(" ").slice(0, 17).join(" ") + (blog.body.split(" ").length > 17 ? '...' : ''); %>
                                <p class="card-text small text-muted">
                                     <%= preview %>
                                </p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>


        <%- include("./partials/script") %>
</body>

</html>